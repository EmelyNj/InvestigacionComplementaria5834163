        <ScrollView>
    <VerticalStackLayout>
                <Image Source="cuadradocubo.png"
                HeightRequest="200"
                WidthRequest="200"></Image>

                <Entry x:Name="num1" Placeholder="Ingrese el número"
                    WidthRequest="300"></Entry>


            <Label Text="Total al Cuadrado" HorizontalTextAlignment="Center" Padding="5"></Label>
                <Entry  x:Name="total"  WidthRequest="300"></Entry>

            <Label Text="Total al Cubo" HorizontalTextAlignment="Center" Padding="5"></Label>
            <Entry  x:Name="totalCubo"  WidthRequest="300"></Entry>

                <Button Text="Obtener" 
                    x:Name="Total" 
                    Clicked="Total_Clicked"  
                    WidthRequest="300"
                    BackgroundColor="LightSlateGrey"
             ></Button> 

            </VerticalStackLayout>
    </ScrollView>
    </ContentPage>

   

