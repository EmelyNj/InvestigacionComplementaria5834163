    <ScrollView>
    <VerticalStackLayout Padding="8">

        <Image Source="ayb.png"
       HeightRequest="200"
       WidthRequest="200"></Image>

        <Label 
    Text="Resultado de la siguiente expresión (A+B)^2/2"
    VerticalOptions="Center" 
    HorizontalOptions="Center"
    Padding="9"/>

        <Entry x:Name="num1" Placeholder="Ingrese el número A"
       WidthRequest="300"></Entry>

        <Entry x:Name="num2" Placeholder="Ingrese el número B"
        WidthRequest="300"></Entry>


        <Entry x:Name="resultado"  WidthRequest="300"></Entry>

        <Button Text="Resolver" 
                x:Name="Resultado" 
                Clicked="Resultado_Clicked"  
                WidthRequest="300"
         BackgroundColor="LightSlateGrey"
         ></Button>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>